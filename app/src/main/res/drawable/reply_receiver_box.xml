<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:right="-2dp" android:top="-2dp">
                <shape android:shape="rectangle">
                    <stroke android:width="3sp" android:color="#AFB" />
                    <solid android:color="#FFddeeff" />
                    <corners android:bottomLeftRadius="10sp" />
                </shape>
            </item>

        </layer-list>
    </item>
    <item>
        <layer-list>

            <item android:right="-2dp" android:top="-2dp">
                <shape android:shape="rectangle">
                    <stroke android:width="3sp" android:color="#FAB" />
                    <solid android:color="#FFeeddff" />
                    <corners android:bottomLeftRadius="10sp" />
                </shape>
            </item>

        </layer-list>
    </item>
</selector>
